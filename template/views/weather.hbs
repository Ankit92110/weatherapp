<!doctype html>
<html lang="en">
  <head>
   {{>header}}
    

    <style>
      .box{
        position: absolute;

        top: 50%;
        left:50%;
        transform:translate(-50%, -18%);
        // display: none !important; 
      }
      .btninsearch{
        position:relative;
        
        transform:scale(0.8);
        left:-99%;
       
      }
    </style>
  </head>
  <body>
    <!-- navbar start -->
     {{>navbar}}
    
<!-- search city -->

<div class="container-fluid justify-content-center">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 justify-content-center m-5">
        <h1 class="mb-5 ag" style="color:blue;">Enter the city name below :</h1>
        <div class="input-group mb-3">
          <input type="text" class="form-control rounded af" placeholder="Enter the city name" aria-label="Recipient's username" aria-describedby="button-addon2" autocomplete="off">
          <div>
            <button class="btn bg-danger text-white  btninsearch box_shadow1" type="button" id="button-addon2"><span><i class="fa-solid fa-magnifying-glass pl-3"></i></span>Search</button>
          </div>
          
        </div>
      </div>
    </div>
  </div>
   



    <div class="container-fluid d-flex justify-content-center box">
      <div class="row justify-content-center   m-0" >
        <div class="col-12 justify-content-center m-0">
          <div class="card text-white bg-secondary rounded mb-3">
            <div class="card-header d-flex justify-content-between">
              <p class="day" style="color:blue;"></p>
              <p class="time" style="color:blue;"></p>
            </div>
            <div class="card-body">
              <h5 class="card-title ">Get city temp here </h5>
              <div class="weatherinfo fs-1 d-flex justify-content-between ">
                <p class="card-text" id="temp"><span>0</span><sup>o</sup>C</p>
              <p id="tem_status" style="color:white; font-weight:bold"> <i class="fa-solid fa-cloud" style="color: #f1f2f6;"></i></p>
              </div>
            </div>
          </div>
        </div>
      </div>
  
  
    </div>
    </div>



    


  

 <!-- footer start -->

{{>footer}}

    <!-- Option 1: Bootstrap Bundle with Popper -->
